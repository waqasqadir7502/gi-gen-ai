{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "src": "/health", "dest": "/api/index.py" },
    { "src": "/docs", "dest": "/api/index.py" },
    { "src": "/redoc", "dest": "/api/index.py" },

    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 30,
      "memory": 1024,
      "excludeFiles": "{node_modules/**,venv/**,env/**,.git/**,*.md,*.pyc,__pycache__/**,tests/**,docs/**,build/**,dist/**,.next/**,.vercel/**,fixtures/**,samples/**,examples/**}"
    }
  }
}