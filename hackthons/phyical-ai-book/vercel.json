{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/index.py" },
    { "src": "/health", "dest": "/backend/api/index.py" },
    { "src": "/docs", "dest": "/backend/api/index.py" },
    { "src": "/redoc", "dest": "/backend/api/index.py" },

    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/" }
  ]
}